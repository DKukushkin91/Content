template.js-template
	.form
		form(action='').form__element
			fieldset.form__fieldset
				button.form__close-btn.js-close-btn
					+icon('cross', 14, 14)
				legend.form__legend.js-legend
				.form__content-wrap
					.form__input-wrap
						input.form__input.js-calendar(type="text" placeholder='Дата выезда' required readonly)
						span.form__text Дата выезда
					span.form__text-err Обязательно поле
				.form__content-wrap
					.form__input-wrap.form__input-wrap--margin
						input.form__input.js-calendar(type="text" placeholder='Дата прибытия' required readonly)
						span.form__text Дата прибытия
					span.form__text-err Обязательно поле
				button.form__btn.js-send-btn
