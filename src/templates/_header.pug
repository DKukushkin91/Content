						li.nav__item
							a.nav__link(href='#')
								span.nav__icon
									+icon('people', 16, 21)
								span.nav__text Пассажиру
								include _notify
						li.nav__item
							a.nav__link(href='#')
								span.nav__icon
									+icon('message', 20, 18)
								span.nav__text Сообщения
								include _notify
						li.nav__item
							a.nav__link(href='#')
