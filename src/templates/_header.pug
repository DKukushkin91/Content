						span.side-block__text Оксана
						span.side-block__sub-text +7 (912) 60-60-606
						span.side-block__icon
							+icon('arrow', 12, 9)
				.side-block__wrap-content
					a.side-block__link(href='#')
						span.side-block__icon
							+icon('search', 18, 18)
						span.side-block__link-text Найти поездку
					a.side-block__link.side-block__link--color(href='#')
						span.side-block__icon
							+icon('plus', 14, 14)
						span.side-block__link-text Создать поездку
