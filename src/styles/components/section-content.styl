.section-content
	width 100%

	&__container
		width 100%
		max-width 1200px
		padding: 16px
		margin: 0 auto

	&__block
		width 100%
		box-shadow: 0px 4px 8px rgba(84, 110, 122, 0.24);
		border-radius: 10px;
		background: $white
		padding 24px
		text-align: center

		&:not(:last-child)
			margin-bottom 16px

	&__wrap
		padding-bottom 16px

	&__title
		font-family $Montserrat
		font-weight 600
		font-size 20px
		line-height 1.4
		padding-bottom 8px
		color: $grey-dark

	&__text
		font-weight 400
		font-size 14px
		line-height 1.5
		color $primary-grey

	&__btn
		font-size 16px
		line-height 1.5
		font-weight 500
		color $white
		background-color: $primary-blue
		border: 0
		border-radius: 30px
		padding: 12px
		cursor pointer
		width 100%
		max-width: 320px
		text-transform: uppercase

	&__btn--bg
		background $primary-green
