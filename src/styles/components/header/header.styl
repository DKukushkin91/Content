.header
	width 100%
	position relative
	box-shadow: 0px 2px 4px rgba(176, 190, 197, 0.5)
	background-color: $white

	&__container
		width 100%
		margin: 0 auto
		max-width: 1200px
		padding: 0 20px

	&__content
		display flex
		align-items: center
		padding: 12px 0

	&__btn
		background: 0
		border: 0
		position relative
		width 18px
		height 12px
		display flex
		flex-direction: column
		justify-content: space-between
		margin-right 19px

		& .header__btn-line
			background-color: $grey-dark
			display block
			width 100%
			height 2px
			transform: rotate(0deg)
			transition: .2s ease all
			border-radius: 2px

	&__btn--open
		& .header__btn-line:nth-child(1)
			transform: rotate(45deg)
			transform-origin: 0 15%

		& .header__btn-line:nth-child(2)
			opacity: 0

		& .header__btn-line:nth-child(3)
			transform: rotate(-45deg)
			transform-origin: 15% 95%

	&__logo
		display block
		max-width: 130px
		margin-right: auto

	&__links
		display flex

	&__link
		display block
		line-height 0

		& svg
			fill: $grey-light

		&:not(:last-child)
			margin-right 30px
