.form
	display flex
	align-items: center
	justify-content: center
	background-color: rgba(59, 81, 114, 0.8)
	z-index 99
	position fixed
	width 100%
	height 100%
	top 0
	right 0
	bottom 0
	left 0
	overflow: auto

	&__element
		position relative
		display block
		width 100%
		max-width: calc(100% - 32px)
		background $white
		border-radius: 10px
		padding: 16px 16px 24px

	&__fieldset
		border: 0
		padding 0
		margin 0

	&__close-btn
		border: 0
		background: 0
		width 24px
		height 24px
		display flex
		align-items: center
		justify-content: center
		cursor pointer
		position absolute
		right 16px
		top 18px

		& svg
			fill: $grey-light
			width 14px
			height 14px

	&__legend
		font-size 20px
		font-family $Montserrat
		font-weight 600
		line-height 1.4
		color $grey-dark
		padding 0
		padding-bottom 24px
		width 100%
		max-width: 85%

	&__input-wrap
		position relative
		border: 1px solid $blue-light
		border-radius: 24px
		width 100%
		margin-bottom 16px

	&__input-wrap--margin
		margin-bottom 24px

	&__input
		width 100%
		border-radius: inherit
		border: 0
		padding: 12px 24px
		font-size 16px
		line-height 1.5
		color: $grey-dark
		font-weight 400

		&::placeholder
			color $grey-light

		&:focus::placeholder
			color transparent

	&__input:focus + .form__text
		display block

	&__text
		font-size 12px
		line-height 1.4
		color: $primary-grey
		background: $white
		position: absolute
		bottom: calc(100% + 2px)
		padding: 0 5px
		left 24px
		transform: translateY(50%)
		display none

	&__btn
		font-size 16px
		line-height 1.5
		font-weight 500
		color $white
		background-color: $primary-blue
		padding: 12px 24px
		width 100%
		border: 0
		border-radius: 30px
		text-transform: uppercase
		cursor pointer

	&__btn--color
		background-color: $primary-green

//styles for datepicker
.air-datepicker-nav--title
	color $primary-blue !important

.air-datepicker-cell.-current-
	color $primary-green !important

.air-datepicker-body--day-name
	color $primary-blue !important
